@page "/add-employee";
@using blazor_crud.Data;
@inject EmployeeService objEmployeeService;
@inject NavigationManager NavigationManager;

<h1>Create Employee</h1>
<hr />
<form>
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label>Name</label>
                <input class="form-control" @bind="@objEmp.Name" />
            </div>
            <div class="form-group">
                <label>Gender</label>
                <select class="form-control" @bind="@objEmp.Gender">
                    <option value="">-- Select Gender --</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
            </div>
            <div class="form-group">
                <label>City</label>
                <input class="form-control" @bind="@objEmp.City" />
            </div>
            <div class="form-group">
                <label>Country</label>
                <input class="form-control" @bind="@objEmp.Country" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="button" class="btn btn-primary" @onclick="@CreateEmployee" value="Save" />
                <input type="button" class="btn btn-secondary" @onclick="@Cancel" value="Cancel" />
            </div>
        </div>
    </div>
</form>

@code {
    EmployeeInfo objEmp = new EmployeeInfo();

    protected void CreateEmployee()
    {
        objEmployeeService.Create(objEmp);
        NavigationManager.NavigateTo("Employee");
    }
    void Cancel()
    {
        NavigationManager.NavigateTo("Employee");
    }
}
